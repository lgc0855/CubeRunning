<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/btn_Frame_run"
                android:layout_width="100dp"
                android:layout_centerHorizontal="true"

                android:background="@android:color/transparent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_Frame_walk"
                android:layout_width="100dp"
                android:layout_toLeftOf="@id/btn_Frame_run"

                android:background="@android:color/transparent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_Frame_ride"
                android:layout_width="100dp"

                android:layout_toRightOf="@id/btn_Frame_run"
                android:background="@android:color/transparent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/frame_navigation"
                android:layout_width="match_parent"
                android:layout_alignLeft="@+id/btn_Frame_walk"
                android:layout_alignRight="@+id/btn_Frame_ride"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="35dp">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@drawable/weather_demo"
                android:layout_width="35dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="北京   18°C  适合跑步"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <Space
                android:layout_width="90dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/jindu_demo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="今日目标"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_light"
                    android:text="800卡路里"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_bright"
                    android:text="46%"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="5km"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="65%"/>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_go"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="&lt;Go&gt;"
            android:background="@android:color/transparent"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>